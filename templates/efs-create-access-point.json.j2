{
    "ClientToken": "{{ _fsap_client_token }}",
    "Tags": [
        {
            "Key": "Name",
            "Value": "{{ item.name }}"
        }
{% for tagname, tagvalue in aws_billing_tags.items() %}
        ,
        {
            "Key": "{{ tagname }}",
            "Value": "{{ tagvalue }}"
        }
{% endfor %}
    ],
    "FileSystemId": "{{ efs_result.efs.file_system_id }}",
{% if item.posix_uid is defined and item.posix_gid is defined %}
    "PosixUser": {
        "Uid": {{ item.posix_uid }},
        "Gid": {{ item.posix_gid }},
        "SecondaryGids": [
{% if item.secondary_gids is defined %}
            {{ item.secondary_gids }}
{% endif %}
        ]
    },
{% endif %}
    "RootDirectory": {
        "Path": "{{ item.root_dir_path }}",
        "CreationInfo": {
            "OwnerUid": {{ item.create_owner_uid }},
            "OwnerGid": {{ item.create_owner_gid }},
            "Permissions": "{{ item.create_mode }}"
        }
    }
}
